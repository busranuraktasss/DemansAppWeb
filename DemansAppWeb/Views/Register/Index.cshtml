@section scripts {

    <script type="text/javascript">
        function passworControl() {
            var password = document.getElementById("Password").value;
            var again_password = document.getElementById("AgainPassword").value;

            console.log(password);
            console.log(again_password);

            if (password != again_password) {
                document.querySelector("#parsley-id-password").style.display = 'block';
            }
            else {
                document.querySelector("#parsley-id-password").style.display = 'none';
            }
        }

        $('[type="password"]').keyup(passworControl);
    </script>
    }
