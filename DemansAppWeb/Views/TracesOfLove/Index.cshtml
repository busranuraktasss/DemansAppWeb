                            </div>
                        </div>
                    </div>
</div>
 @section scripts {

    <script type="text/javascript" src="https://api-maps.yandex.ru/2.1/?lang=en_RU&amp;apikey=<788dcc52-1903-474c-96f8-82b437dcc613"></script>
    <script type="text/javascript">

        _placeTable = null;

        $((_$) => {
           
        });

        ymaps.ready(init);

        function init () {
            console.log("hello");
            var myMap = new ymaps.Map("map", {
                center: [40.69976154407544, 29.888037639972598],
                zoom: 10
            }, {
                searchControlProvider: 'yandex#search'
            })

            $.post('@Url.Action("ShiftMap","TracesOfLove")', (d, s) => {
                console.log(d.data[0]);
                console.log(d.data[0].lng);
                for (var i = 0; i < d.data.length; i++) {
                    var Lat = d.data[i].lat;
                    var Lng = d.data[i].lng;
                    var Place = d.data[i].placeName;
                    console.log(Lat + '--' + Lng + '--' + Place );

                    myGeoObject = new ymaps.GeoObject({
                        geometry: {
                            type: "Point",
                            coordinates: [Lat, Lng]
                        },
                        properties: {
                            iconContent: Place
                        }
                    }, {
                        preset: 'islands#redStretchyIcon'
                    })
                    myMap.geoObjects
                        .add(myGeoObject);
                }


            })

        }

         var searchButton = () => {

             var searchName = document.getElementById("search_input").value;
             console.log(searchName);
            if (_placeTable == null)
                _placeTable = $('#placeTable').DataTable({
                    language: { url: '../dil.json' },
                    processing: true,
                    serverSide: true,
                    paging: true,
                    filter: true,
                    scrollCollapse: true,
                    orderMulti: true,
                    order: [[1, "asc"]],
                    ajax: {
                        url: '@Url.Action("ShowPlace", "TracesOfLove")',
                        type: "POST",
                        data: function (d) {
                            d.cityName = searchName;
                        },
                        datatype: "json"
                    },
                    createdRow: function (row, data, dataIndex) {
                    },
                    columnDefs: [{ "defaultContent": "-", "targets": "_all" }],
                    columns: [
                        {
                            "render": (data, type, row) => {
                                return row.City;
                            }, "name": "City"
                        },
                        {
                            "render": (data, type, row) => {
                                return row.PlaceName;
                            }, "name": "PlaceName",
                        },
                        {
                            "render": (data, type, row) => {
                                return row.Phone;
                            }, "name": "Phone"
                        },
                    ],
                    fixedColumns: true,
                    scrollCollapse: true,
                    initComplete: function (settings, json) {
                        $('#placeTable_filter input').unbind();
                        $('#placeTable_filter input').bind('keyup', function (e) {
                            if (e.keyCode == 13) {
                                    _placeTable.search(this.value).draw();
                            }
                        });

                        $('.dataTables_scrollBody').removeAttr('style').css({
                            'position': 'relative',
                            'overflow-y': 'auto',
                            'overflow-x': 'auto',
                            'width': '100%',
                            'max-height': ((window.innerHeight / 2) + 120) + 'px'
                        });

                    }

                })
        }
    
    
    </script>

 }